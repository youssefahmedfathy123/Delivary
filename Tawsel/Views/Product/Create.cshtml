@model Tawsel.ViewModels.ProductViewModel;
@using Tawsel.Enums.ProductEnum;


@{
    ViewData["Title"] = "Create New Product";
}



<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Salary" class="control-label">Salary</label>
            <input asp-for="Salary" class="form-control" rows="4"/>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <!-- Dropdown for Enum -->
        <div class="form-group mb-3">
            <label asp-for="Department" class="control-label">Department</label>
            <select asp-for="Department" class="form-control"
                    asp-items="Html.GetEnumSelectList<ProductDepartment>()">
                <option value="">-- Select Status --</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Image" class="control-label">Image</label>
            <input asp-for="Image" class="form-control" type="file" accept="image/*" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

