@model IEnumerable<User>



@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No Delivary men yet.
    </div>
}
else
{
    <div class="d-flex justify-content-center gap-2 my-4">
        @for (int i = 1; i <= 5; i++)
        {
            <a asp-controller="Show" asp-action="GetDelivaryMen" asp-area="" asp-route-PageNumber="@i"
               class="btn @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-outline-primary") rounded-pill px-3 py-2">
                @i
            </a>
        }
    </div>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.ImageUrl" width="100%" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">Name  @item.FullName</p>
                                <p class="card-text">Phone  @item.PhoneNumber</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">Email of Delivery @item.Email</small>
                                    <a class="nav-link text-dark bg-info" asp-area="" asp-route-id="@item.Id" asp-controller="Show" asp-action="SetDelivaryMan">Set Job</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}




